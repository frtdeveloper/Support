<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="40dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_banner"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:src="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_banner_position_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@mipmap/dot_normal" />
                <ImageView
                    android:id="@+id/iv_banner_position_two"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@mipmap/dot_normal" />
                <ImageView
                    android:id="@+id/iv_banner_position_three"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/dot_normal" />
                <ImageView
                    android:id="@+id/iv_banner_position_four"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/dot_normal" />
                <ImageView
                    android:id="@+id/iv_banner_position_five"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/dot_normal" />
            </LinearLayout>
        </RelativeLayout>

        <com.dfh.support.activity.widget.LoadListView
            android:id="@+id/lv_advertisement"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent"
            android:divider="#FFFFFF"
            android:dividerHeight="15dp" />
    </LinearLayout>
</ScrollView>